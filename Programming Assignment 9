# 1. Write a Python program to check if the given number is a Disarium Number? 

def task1(num):
    
    try:
        if type(num) != int:
            raise Exception("Not an integer")
            
        num = str(num)
        total = 0
        for i in range(0, len(num)):
            n = int(num[i])
            n = n**(i+1)
            total = total + n

        if total == int(num):
            return True
        else:
            return False

    except Exception as e:
        print(e)
        

num=int(input("Enter a number: ")) 
print(task1(num))


